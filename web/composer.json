{
    "name": "promo/waiting-lists-ms",
    "description": "Waiting Lists API Microservice",
    "license": "MIT",
    "type": "project",
    "private": true,
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-openssl": "*",
        "laravel/lumen-framework": "~8",
        "sumra/sdk": "*",
        "php-amqplib/php-amqplib": ">=2.9.0",
        "sumra/pubsub": "*",
        "vladimir-yuldashev/laravel-queue-rabbitmq": "^9.1"
    },
    "require-dev": {
        "fakerphp/faker": "~1",
        "mockery/mockery": "~1",
        "phpunit/phpunit": "~9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../sumra-sdk",
            "options": {
                "symlink": false
            }
        },
        {
            "type" : "path",
            "url" : "../pubsub",
            "options": {
            "symlink": false
            }
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
